{% extends '../base.twig' %}
{% block title %}
  {{ title }}
{% endblock %}

{% block body %}
  {% for post in posts %}
    <div class="post">
      <div class="date">
        {{ post.published_date }}
      </div>
      <h1>{{ post.title }}</h1>
      <p>{{ post.body|linebreaksbr }}</p>
    </div>
  {% endfor %}
{% endblock %}
