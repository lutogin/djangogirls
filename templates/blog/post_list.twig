{% extends '../base.twig' %}
{% block title %}
  {{ title }}
{% endblock %}

{% block body %}
{% for post in posts %}
  <div class="row">
    <div class="col"></div>
    <div class="col-6">
      <h3>{{ post.title }}</h3>
      <div class="">
        <span>{{ post.body }}</span>
        <h6>Author - {{ post.author.username }}</h6>
      </div>
    </div>
    <div class="col"></div>
  </div>
  <hr>
{% endfor %}
{% endblock %}
